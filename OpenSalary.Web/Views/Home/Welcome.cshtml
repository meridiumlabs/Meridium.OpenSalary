@model List<OpenSalary.Web.Models.User>
    <div class="header-wrap">
        <h1>Välkommen till<br />Meridium Open Salary</h1>
        <p>Kom igång genom att välja ett användarnamn och mata in det i adressfältet<br /><em>http://opensalary.meridium.se/[användarnamn]</em></p>
        <div class="card card--welcome">
            <div class="card-background"></div>
            <div class="card-body card-body--welcome">
                <strong>Vi har registrerat oss</strong>
                <ul>
                    @foreach (var user in Model.OrderBy(x => x.Name)) {
                        <li><a href="/@user.UserName">@user.Name</a></li>
                    }
                    @if (Model.Count == 0) {
                        <li>Zero, zip, zilch, nada<br/>Du har fortfarande chansen att bli den första!</li>
                    }
                </ul>
            </div>
        </div>
    </div>
